---
import { PERSONAL_INFO } from "../../data/personal";
import { NAVIGATION_DATA } from "../../data/navigation";
---

<div class="relative">
  <!-- Input control (peer) -->
  <input id="menu-toggle" type="checkbox" class="peer hidden" />

  <!-- Navbar -->
  <nav
    class="fixed top-0 left-0 w-full z-50 bg-gray-950/20 backdrop-blur-md border-b border-white/10"
    aria-label="Main navigation"
  >
    <div class="max-w-7xl mx-auto px-6 py-3 flex items-center justify-between">
      <a href="/" class="flex items-center">
        <h3 class="text-white text-2xl font-bold text-shadow-purple">{PERSONAL_INFO.brand}</h3>
      </a>

      <!-- Links md+ -->
      <ul class="hidden md:flex space-x-8">
        {
          NAVIGATION_DATA.navigationMenu && 
            NAVIGATION_DATA.navigationMenu.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="relative group text-white font-bold transition-colors duration-150 hover:text-secondary focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-primary rounded-sm"
                  ><span
                    class="absolute left-0 -bottom-2 w-0 h-0.5 bg-secondary transition-all duration-300 group-hover:w-full"
                  ></span>{item.label}</a
                  >
              </li>
          ))
        }
      </ul>

      <!-- Bot贸n hamburguesa m贸vil -->
      <label
        for="menu-toggle"
        class="md:hidden cursor-pointer z-50 flex items-center rounded-sm focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-primary"
        aria-label="Toggle navigation menu"
        aria-controls="mobile-menu"
      >
        <svg
          class="h-6 w-6 text-white peer-checked:hidden"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        <svg
          class="h-6 w-6 text-white hidden peer-checked:block"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </label>
    </div>
  </nav>

  <!-- Overlay -->
  <label
    for="menu-toggle"
    class="fixed inset-0 bg-black/60 hidden peer-checked:block cursor-pointer z-50"
  ></label>

  <!-- Sidebar s贸lido m贸vil -->
  <div
    id="mobile-menu"
    class="fixed top-0 right-0 h-full w-64 bg-gray-900 shadow-lg transform translate-x-full transition-transform duration-300 peer-checked:translate-x-0 z-50"
  >
    <ul class="flex flex-col space-y-6 mt-10 ml-6">
      {
        NAVIGATION_DATA.navigationMenu.map((item) => (
          <li>
            <a
              href={item.href}
              class="text-white text-lg font-bold hover:text-secondary focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-primary rounded-sm"
              onclick="document.getElementById('menu-toggle').checked = false"
            >
              {item.label}
            </a>
          </li>
        ))
      }
      <li>
        <a
          href="#contact"
          class="inline-block px-6 py-3 bg-primary hover:bg-secondary text-white font-semibold rounded-3xl transition-colors duration-150 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-primary"
          onclick="document.getElementById('menu-toggle').checked = false"
        >
          Contact me
        </a>
      </li>
    </ul>
  </div>
</div>

<style>
    .text-shadow-purple {
        text-shadow: 2px 2px 0 #3678cf;
    }
</style>
