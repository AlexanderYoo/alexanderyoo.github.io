---
import { PERSONAL_INFO } from "../../data/personal";
import Section from "../UI/Section.astro";
import Title from "../UI/Title.astro";
import Badge from "../UI/Badge.astro";
---

<Section id="about" title="About Me">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <!-- Photo Column -->
        <div
            class="relative group mx-auto drop-shadow-[8px_8px_0_#3F8C9F]"
            data-aos="fade-right"
        >
            <div class="absolute -inset-1 rounded-2xl"></div>
            <div class="relative">
                <img
                    src="/images/alex-yoo.png"
                    alt={`${PERSONAL_INFO.name} Portrait`}
                    class="rounded-2xl w-full max-w-sm object-cover"
                />
            </div>
        </div>

        <!-- Description Column -->
        <div class="flex flex-col gap-6" data-aos="fade-left">
            <Title level={3}>
                {PERSONAL_INFO.title}
            </Title>
            <p class="text-lg md:text-xl text-gray-200 leading-relaxed font-light text-pretty">
                {PERSONAL_INFO.description1}
            </p>
            <p class="text-lg md:text-xl text-gray-200 leading-relaxed font-light text-pretty">
                {PERSONAL_INFO.description2}
            </p>
            <p class="text-lg md:text-xl text-gray-200 leading-relaxed font-light text-pretty">
                {PERSONAL_INFO.description3}
            </p>
            <div class="flex flex-wrap gap-4 mt-4">
                {
                    PERSONAL_INFO.skills &&
                        PERSONAL_INFO.skills.map((skill) => (
                            <Badge class="px-4 py-2 bg-white/5 text-sm text-gray-200">
                                {skill}
                            </Badge>
                        ))
                }
            </div>
        </div>
    </div>
</Section>
