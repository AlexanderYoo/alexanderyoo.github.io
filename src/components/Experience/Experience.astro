---
import Section from "../UI/Section.astro";
import { EXPERIENCE } from "../../data/experience";
---

<Section id="experience" title="Experience" titleClassName="mb-10">
    <div class="w-full grid grid-cols-1 lg:grid-cols-2 gap-6">
        {
            EXPERIENCE.map((item) => (
                <article
                    class="rounded-2xl border border-white/10 bg-gray-900/40 p-6"
                    data-aos="fade-up"
                >
                    <header class="mb-4">
                        <h3 class="text-2xl font-bold text-white text-balance">
                            {item.role}
                        </h3>
                        <p class="text-primary font-semibold mt-1">{item.company}</p>
                        <p class="text-sm text-gray-300 mt-1 text-pretty">
                            {item.period} | {item.location}
                        </p>
                    </header>
                    <ul class="space-y-3">
                        {
                            item.points.map((point) => (
                                <li class="text-gray-200 leading-relaxed text-pretty">
                                    {point}
                                </li>
                            ))
                        }
                    </ul>
                </article>
            ))
        }
    </div>
</Section>
